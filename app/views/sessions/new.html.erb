<header>
  <h1>Login</h1>
  <p>Login in to your account below to access admin tools. If you do not have an account please contact the administrator.</p>
</header>

<% if flash[:alert] %>
  <div id="error">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>

<%= form_tag 'sessions' do %>
  <fieldset>
    <legend>Sessions</legend>

    <ol>
      <li>
        <%= label_tag :email, 'email address' %>
        <%= email_field_tag :email, nil, placeholder: 'email address' %>
      </li>

      <li>
        <%= label_tag :password, 'password' %>
        <%= password_field_tag :password, nil, placeholder: 'password' %>
      </li>

      <li>
        <%= submit_tag 'login' %>
      </li>
    </ol>
  </fieldset>
<% end %>